#
# bspwm hotkeys
#

### WM Global Actions ###

## Exit bspwm
super + alt + Escape
	pkill -x panel; bspc quit

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd


### Multi-Desktop Management ###

# Switch to last desktop
super + Tab
	bspc desktop --focus last

# Switch to specific desktop
super + {1-9,0}
    desktop={1-9,10};\
    bspc monitor --add-desktops $(seq $(expr 1 + $(bspc query -D | wc -l)) $desktop);\
    bspc desktop --focus focused:^$desktop

# Switch to next/prev desktop
super + bracket{left,right}
	bspc desktop --focus {prev,next}


### Current Desktop Management ###

# Toggle desktop layout
super + t
	bspc desktop --layout next

# Balance window sizes
super + b
	bspc desktop --balance

# Move window focus or move window
super + {_,shift + }{h,j,k,l}
	bspc window --{focus,swap} {left,down,up,right}

# Focus next/prev window
super + {_,shift + }c
	bspc window --focus {next,prev}

# Rotate windows
super + {comma,period}
	bspc desktop --circulate {backward,forward}

# Switch to last window
super + grave
	bspc window --focus last


### Current Window Controls ###

# Close current window
super + w
	bspc window --close

# Fullscreen window toggle
super + f
    bspc window --toggle fullscreen

# Move to specific desktop
super + shift + {1-9,0}
	bspc window --to-desktop focused:^{1-9,10}

# Move to specific monitor
super + alt + {1-9,0}
    bspc desktop --to-desktop ^{1-9,0}

# Floating window toggle
super + s
	bspc window --toggle floating

# Swap with the last window
super + apostrophe
	bspc window --swap last

# Send window to biggest position on screen
super + m
	bspc window --swap biggest

# Window directional embiggen
super + alt + {h,j,k,l}
	bspc window --edge {left -10,down +10,up -10,right +10}

# Window directional enlittlen
super + alt + shift + {h,j,k,l}
	bspc window --edge {right -10,up +10,down -10,left +10}


### Uncategorized / TODO ###

#super + {o,i}
#	bspc control --record-history off; \
#	bspc window {older,newer} -f; \
#	bspc control --record-history on

#super + y
#	bspc window --to-window last.manual

super + ctrl + {h,j,k,l}
	bspc window --presel {left,down,up,right}

super + ctrl + {_,shift + }space
	bspc {window --presel cancel,desktop --cancel-presel}

super + ctrl + {1-9}
	bspc window --ratio 0.{1-9}

~button1
	bspc pointer --grab focus

super + button{1-3}
	bspc pointer --grab {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer --track %i %i

super + @button{1-3}
	bspc pointer --ungrab



### wm independent hotkeys ###

super + Return
	terminology

super + space
	dmenu_run

super + v
    xscreensaver-command --lock


### Media keys ###

XF86AudioLowerVolume
    ~/.lemonbar/volume_ctrl 10%-

XF86AudioRaiseVolume
    ~/.lemonbar/volume_ctrl 10%+

XF86AudioMute
    ~/.lemonbar/volume_ctrl toggle

XF86MonBrightnessUp
    xbacklight -inc 10

XF86MonBrightnessDown
    xbacklight -dec 10

shift + XF86MonBrightnessUp
    xbacklight -inc 1

shift + XF86MonBrightnessDown
    xbacklight -dec 1
