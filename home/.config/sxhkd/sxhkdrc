#
# bspwm hotkeys
#

super + alt + Escape
	pkill -x panel; bspc quit

super + w
	bspc window --close

super + t
	bspc desktop --layout next

super + b
	bspc desktop --balance

super + {s,f}
	bspc window --toggle {floating,fullscreen}

super + {grave,Tab}
	bspc {window,desktop} --focus last

super + apostrophe
	bspc window --swap last

super + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
	bspc control --record-history on

super + y
	bspc window --to-window last.manual

super + m
	bspc window --swap biggest

super + {_,shift + }{h,j,k,l}
	bspc window --{focus,swap} {left,down,up,right}

super + {_,shift + }c
	bspc window --focus {next,prev}

super + {comma,period}
	bspc desktop --circulate {backward,forward}

super + bracket{left,right}
	bspc desktop --focus {prev,next}

super + ctrl + {h,j,k,l}
	bspc window --presel {left,down,up,right}

super + ctrl + {_,shift + }space
	bspc {window --presel cancel,desktop --cancel-presel}

super + alt + {h,j,k,l}
	bspc window --edge {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
	bspc window --edge {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
	bspc window --ratio 0.{1-9}

super + {1-9,0}
	bspc window --focus focused:^{1-9,10}

super + shift + {1-9,0}
	bspc desktop --to-desktop focused:^{1-9,10}

super + alt + {1-9,0}
    bspc desktop --to-monitor ^{1-9,0}

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

super + Return
	terminology

super + space
	dmenu_run

#
# Media keys
#
XF86AudioLowerVolume
    ~/.lemonbar/volume_ctrl 10%-

XF86AudioRaiseVolume
    ~/.lemonbar/volume_ctrl 10%+

XF86AudioMute
    ~/.lemonbar/volume_ctrl toggle

XF86MonBrightnessUp
    xbacklight -inc 10

XF86MonBrightnessDown
    xbacklight -dec 10

shift + XF86MonBrightnessUp
    xbacklight -inc 1

shift + XF86MonBrightnessDown
    xbacklight -dec 1

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
